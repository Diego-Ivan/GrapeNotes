<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.2.5"/>
  <template class="GrapeNotesPreferencesWindow" parent="AdwPreferencesWindow">
    <property name="modal">true</property>
    <child>
      <object class="AdwPreferencesPage">
        <property name="title" translatable="yes">_Style</property>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Color Scheme</property>

            <child>
              <object class="GtkSourceStyleSchemeChooserWidget" id="style_scheme"></object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Editor</property>
            <child>
              <object class="AdwActionRow">
                <property name="title">Typography</property>

                <child type="suffix">
                  <object class="GtkFontButton" id="font_button">
                    <property name="modal">true</property>
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>

  </template>

</interface>
